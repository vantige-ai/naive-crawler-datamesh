# GCP Serverless Web Crawler Configuration
# Copy this file to config.sh and fill in your values

# --- REQUIRED CONFIGURATION ---

# Unique identifier for this crawler instance (lowercase, hyphens allowed)
export CRAWLER_ID="{{DEFAULT_CRAWLER_ID}}"

# Target domain to crawl
export DOMAIN_TO_CRAWL="{{EXAMPLE_DOMAIN}}"

# Maximum pages to discover via Firecrawl API (in thousands)
export PAGE_LIMIT="10"

# Google Cloud Platform project ID
export PROJECT_ID="{{EXAMPLE_PROJECT_ID}}"

# GCP deployment region
export REGION="{{DEFAULT_REGION}}"

# Firecrawl API key (get from https://www.firecrawl.dev/)
export FIRECRAWL_API_KEY="{{EXAMPLE_API_KEY}}"

# Security setting - Required for Pub/Sub push subscriptions
export ALLOW_UNAUTHENTICATED="true"

# --- SETUP INSTRUCTIONS ---
# 1. Copy this file: cp .env.example config.sh
# 2. Edit config.sh with your actual values
# 3. Never commit config.sh to version control
# 4. Run: ./scripts/setup_infra.sh && ./scripts/deploy.sh